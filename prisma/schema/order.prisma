

enum DeliveryStatus {
  PREPARING
  READY     
  DELIVERED   
}
enum OrderStatus {
  CART
  ORDERD
  CANCELLED
}

model Orders {
  id String @id @unique @default(uuid())
  customerId String
  restaurantId String
  menuItemId String
  quantity Int
  status OrderStatus @default(CART)
  deliveryStatus DeliveryStatus @default(PREPARING)
  deliveryAddress String
  paymentMethod String @default("Cash on delivery")

  customer User @relation(fields: [customerId], references: [id], onDelete: Cascade)
  restaurant Restaurants @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  menuItem Menu_items @relation(fields: [menuItemId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


