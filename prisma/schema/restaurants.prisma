// restaurant model
model Restaurants {
  id          String @id @unique @default(uuid())
  ownerId     String @unique
  name        String
  description String
  address     String
  phone       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  menuItem Menu_items[]
  order Orders[]
  reviews Reviews[]

  user User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  
}

model Menu_items {
  id String @id @unique @default(uuid())
  restaurantId String
  name String
  description String
  price Int
  rating Int
  cuisine String  
  imageUrl String
  available Boolean
  ingredients String[]
  deliveryTime String
  allergens String[]
  calories Int
  servingSize String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order Order_items[]
  reviews Reviews[]
  resturant Restaurants @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
 
}

